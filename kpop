<script>
// Wishlist
let wishlist = [];
function addToWishlist(item){
  if(!wishlist.includes(item)){wishlist.push(item);document.getElementById('wishlistCount').textContent=wishlist.length;}
}
function openWishlist(){updateWishlist();document.getElementById('wishlistModal').style.display='flex';}
function closeWishlist(){document.getElementById('wishlistModal').style.display='none';}
function updateWishlist(){
  const ul=document.getElementById('wishlistItems');ul.innerHTML='';
  wishlist.forEach(item=>{let li=document.createElement('li');li.textContent=item;li.style.marginBottom='0.5rem';ul.appendChild(li);});
}
function requestOrder(){
  const name=document.getElementById('userName').value.trim();
  const email=document.getElementById('userEmail').value.trim();
  if(!name || !email || wishlist.length===0){alert('Please fill in name, email, and add items.'); return;}
  const emailRegex=/^[^\s@]+@[^\s@]+\.[^\s@]+$/;
  if(!emailRegex.test(email)){alert('Please enter a valid email.'); return;}
  const subject=encodeURIComponent('KPOP Wishlist Order');
  const body=encodeURIComponent(`Name: ${name}\nEmail: ${email}\n\nItems:\n- ${wishlist.join('\n- ')}`);
  window.location.href=`mailto:orders@sunniejae.com?subject=${subject}&body=${body}`;
}

// Member themes
function setMemberTheme(member){
  const root=document.documentElement;
  const colors={
    'NAYA':['#ffffff','#f0f0f5','#00c9c2','#f8f8f8'],
    'FEARNOT':['#ffb3d6','#c13886','#ffffff','#ffe6f0'],
    'TOMOON':['#00a8ff','#004c99','#ffffff','#e0f0ff'],
    'SWITH':['#00c000','#007a00','#ffffff','#e0ffe0'],
    'MULTI':['#ff4b4b','#990000','#ffffff','#ffe0e0']
  };
  if(colors[member]){
    root.style.setProperty('--primary',colors[member][0]);
    root.style.setProperty('--secondary',colors[member][1]);
    root.style.setProperty('--accent',colors[member][2]);
    root.style.setProperty('--bg',colors[member][3]);
  }
}

// Products Carousel by Collection
const collections = [
  { name: "Spaghetti", type: "Key Chain" },
  { name: "Light Stick", type: "Key Chain" },
  { name: "FIM's Club", type: "Key Chain" },
  { name: "Spaghetti", type: "Sticker" },
  { name: "Light Stick", type: "Sticker" },
  { name: "FIM's Club", type: "Sticker" },
  { name: "KPOP", type: "Sticker" }
];
const members=["OT6","NAYA","FEARNOT","TOMOON","SWITH","MULTI"];

const shopGrid=document.getElementById('shopGrid');
function createCollectionCard(collection){
  let index=0;
  const versions=members.map(member=>({
    member,
    name:`${member} ${collection.name} ${collection.type}`,
    img:'https://sunniejae.blob.core.windows.net/sunniejae/logo.png'
  }));
  const div=document.createElement('div');
  div.className='product';
  div.dataset.member=versions[0].member;
  div.innerHTML=`
    <img src="${versions[0].img}" alt="${versions[0].name}">
    <h3>${versions[0].name}</h3>
    <p class="price">$15</p>
    <button class="btn">Add to Wishlist</button>
  `;
  const imgEl=div.querySelector('img');
  const titleEl=div.querySelector('h3');
  const btnEl=div.querySelector('button');
  btnEl.onclick=()=>addToWishlist(versions[index].name);
  div.addEventListener('mouseenter',()=>{
    div.carouselInterval=setInterval(()=>{
      index=(index+1)%versions.length;
      imgEl.src=versions[index].img;
      titleEl.textContent=versions[index].name;
      div.dataset.member=versions[index].member;
    },800);
  });
  div.addEventListener('mouseleave',()=>{
    clearInterval(div.carouselInterval);
    index=0;
    imgEl.src=versions[index].img;
    titleEl.textContent=versions[index].name;
    div.dataset.member=versions[index].member;
  });
  return div;
}
collections.forEach(col=>shopGrid.appendChild(createCollectionCard(col)));

// Multi-question Bias Quiz
const quizQuestions=[
  {question:"What's your favorite color?", options:[{text:"White",member:"NAYA"},{text:"Pink",member:"FEARNOT"},{text:"Blue",member:"TOMOON"},{text:"Green",member:"SWITH"},{text:"Red",member:"MULTI"}]},
  {question:"Which personality matches you best?", options:[{text:"Leader",member:"NAYA"},{text:"Cute & Bright",member:"FEARNOT"},{text:"Graceful",member:"TOMOON"},{text:"Mysterious",member:"SWITH"},{text:"Cheerful",member:"MULTI"}]},
  {question:"Favorite hobby?", options:[{text:"Singing",member:"FEARNOT"},{text:"Dancing",member:"TOMOON"},{text:"Reading",member:"SWITH"},{text:"Gaming",member:"MULTI"},{text:"All-rounder",member:"NAYA"}]}
];
let memberScores={NAYA:0,FEARNOT:0,TOMOON:0,SWITH:0,MULTI:0};
let currentQuestion=0;
function openQuiz(){currentQuestion=0; memberScores={NAYA:0,FEARNOT:0,TOMOON:0,SWITH:0,MULTI:0}; showQuestion(currentQuestion); document.getElementById('quizModal').style.display='flex';}
function closeQuiz(){document.getElementById('quizModal').style.display='none';}
function showQuestion(index){
  const quizContent=document.getElementById('quizContent');
  quizContent.innerHTML=`<div class="quiz-question">${quizQuestions[index].question}</div>`;
  quizQuestions[index].options.forEach(opt=>{
    const btn=document.createElement('div');
    btn.className='quiz-option';
    btn.textContent=opt.text;
    btn.onclick=()=>chooseOption(opt.member);
    quizContent.appendChild(btn);
  });
}
function chooseOption(member){memberScores[member]++; currentQuestion++; if(currentQuestion<quizQuestions.length){showQuestion(currentQuestion);}else{showResult();}}
function showResult(){
  let maxScore=0; let topMember="OT6";
  for(const member in memberScores){if(memberScores[member]>maxScore){maxScore=memberScores[member]; topMember=member;}}
  document.getElementById('quizResultText').textContent=`Your bias is ${topMember}! ü•∞`;
  setMemberTheme(topMember);
  document.getElementById('quizModal').style.display='none';
  document.getElementById('quizResultModal').style.display='flex';
}
function closeResult(){document.getElementById('quizResultModal').style.display='none';}
</script>

</body>
